# CogniFlow Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
APP_NAME=CogniFlow
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Ollama AI Settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=30
OLLAMA_DEFAULT_MODEL=llama2:7b

# UI Settings
UI_THEME=light
UI_LANGUAGE=it
UI_FONT_SIZE=13
UI_WINDOW_WIDTH=1200
UI_WINDOW_HEIGHT=800

# Security Settings
SECURITY_MAX_FAILED_ATTEMPTS=5
SECURITY_SESSION_TIMEOUT=3600
SECURITY_ENCRYPT_CACHE=true

# Performance Settings
PERFORMANCE_MAX_CACHE_SIZE=100
PERFORMANCE_CACHE_TTL=300
PERFORMANCE_THREAD_POOL_SIZE=4

# Audio Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# OCR Settings (if pytesseract is available)
OCR_LANGUAGE=ita
OCR_CONFIG=--psm 6

# Development Settings
DEV_MODE=false
DEV_LOG_TO_CONSOLE=true
DEV_ENABLE_PROFILING=false